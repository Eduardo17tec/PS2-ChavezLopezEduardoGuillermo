@model IEnumerable<PS2_ChavezLopezEduardoGuillermo.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Ordenes</h2>

<a href="@Url.Action("Create","Orders")" class="btn btn-dark btn-sm btn-icon-split">
    <span class="icon text-white-50"><i class="fas fa-plus-circle"></i></span>
    <span class="text">Nuevo Proveedor</span>
</a>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Menu.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clave)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Menu.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Clave)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
